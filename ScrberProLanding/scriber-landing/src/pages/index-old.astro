    <!-- Custom Styles and Scripts -->
    <style>
      /* Waveform Animation */
      .waveform-glyph {
        width: 20px;
        height: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 2px;
      }

      .waveform-bar {
        width: 1px;
        background: rgb(0, 255, 255);
        border-radius: 0.5px;
        transform-origin: center;
      }

      /* Living Orb Animations */
      .orb-progress {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        margin: 20px 0;
        flex-wrap: nowrap;
        overflow: hidden;
      }

      .orb {
        width: 12px;
        height: 12px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        transition: all 0.3s ease;
        opacity: 0.1;
        transform: scale(0.8);
      }

      .orb.idle-glow {
        background: rgba(0, 255, 255, 0.20);
        box-shadow: 0 0 4px rgba(0, 255, 255, 0.25);
        opacity: 0.20;
        transform: scale(0.85);
        animation: advancedIdlePulse 4s ease-in-out infinite;
      }

      .orb.processing {
        background: rgba(0, 255, 255, 0.4);
        box-shadow: 0 0 5px rgba(0, 255, 255, 0.3);
        opacity: 0.35;
        transform: scale(0.9);
        animation: advancedProcessingPulse 2s ease-in-out infinite;
      }

      .orb.progress-active {
        background: #00ffff;
        box-shadow: 0 0 12px #00ffff, 0 0 20px rgba(0, 255, 255, 0.6);
        opacity: 1.0;
        transform: scale(1.0);
        transition: all 0.2s ease;
      }

      @keyframes advancedIdlePulse {
        0%, 100% { 
          opacity: 0.16;
          box-shadow: 0 0 3px rgba(0, 255, 255, 0.2);
          transform: scale(0.85);
        }
        25% { 
          opacity: 0.20;
          box-shadow: 0 0 4px rgba(0, 255, 255, 0.25);
          transform: scale(0.88);
        }
        50% { 
          opacity: 0.24;
          box-shadow: 0 0 5px rgba(0, 255, 255, 0.3);
          transform: scale(0.91);
        }
        75% { 
          opacity: 0.22;
          box-shadow: 0 0 4px rgba(0, 255, 255, 0.28);
          transform: scale(0.89);
        }
      }

      @keyframes advancedProcessingPulse {
        0%, 100% { 
          opacity: 0.35;
          transform: scale(0.9);
        }
        50% { 
          opacity: 0.5;
          transform: scale(0.95);
        }
      }

      /* Enhanced Glass Morphism - Design Guide Specs */
      .glass-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        box-shadow: 
          0 10px 30px rgba(0, 0, 0, 0.5),
          inset 0 1px 0 rgba(255, 255, 255, 0.18);
        position: relative;
        overflow: hidden;
      }
      
      /* Animated Glass Ornaments */
      .glass-ornament {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: 
          radial-gradient(circle at 28% 22%, rgba(255, 255, 255, 0.18) 0%, transparent 50%),
          radial-gradient(circle at 70% 82%, rgba(0, 255, 255, 0.18) 0%, transparent 50%);
        filter: blur(24px);
        mix-blend-mode: plus-lighter;
        animation: ornamentMove 8s ease-in-out infinite alternate;
        pointer-events: none;
      }
      
      @keyframes ornamentMove {
        0% { 
          background: 
            radial-gradient(circle at 22% 16%, rgba(255, 255, 255, 0.18) 0%, transparent 50%),
            radial-gradient(circle at 64% 76%, rgba(0, 255, 255, 0.18) 0%, transparent 50%);
        }
        100% { 
          background: 
            radial-gradient(circle at 34% 28%, rgba(255, 255, 255, 0.18) 0%, transparent 50%),
            radial-gradient(circle at 76% 88%, rgba(0, 255, 255, 0.18) 0%, transparent 50%);
        }
      }

      .glass-button {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 50px;
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
        transition: all 0.3s ease;
      }
      
      .glass-button:hover {
        background: rgba(255, 255, 255, 0.15);
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.4);
      }

      /* Hover effects */
      .orb:hover {
        transform: scale(1.2) !important;
        opacity: 0.8 !important;
        box-shadow: 0 0 15px rgba(0, 255, 255, 0.8) !important;
      }
    </style>

    <script>
      // Waveform Animation
      const pattern = [0.25, 0.65, 0.95, 0.55, 0.85, 0.75, 0.10];
      
      function animateWaveform(containerId, speed = 6.0, amp = 0.6, color = 'rgb(0, 255, 255)') {
        const container = document.getElementById(containerId);
        if (!container) return;
        
        const bars = container.querySelectorAll('.waveform-bar');
        const containerHeight = container.offsetHeight;
        
        function animate() {
          const t = Date.now() / 1000 * speed;
          
          bars.forEach((bar, i) => {
            const baseH = Math.max(2, pattern[i] * containerHeight);
            const scale = 1.0 + amp * 0.2 * Math.sin(t + i * 1.6); // Reduced amplitude for header
            
            bar.style.height = `${baseH}px`;
            bar.style.transform = `scaleY(${scale})`;
            bar.style.background = color;
          });
          
          requestAnimationFrame(animate);
        }
        
        animate();
      }
      
      // Start animations
      document.addEventListener('DOMContentLoaded', () => {
        animateWaveform('headerWaveform', 6.0, 0.2, 'rgb(0, 255, 255)');
        
        // Living Orb demo progression
        const orbProgress = document.getElementById('heroOrbProgress');
        if (orbProgress) {
          const orbs = orbProgress.querySelectorAll('.orb');
          
          // Demo progression every few seconds
          let currentIndex = 0;
          setInterval(() => {
            // Reset all orbs to idle
            orbs.forEach(orb => {
              orb.className = 'orb idle-glow';
            });
            
            // Activate next orb
            if (orbs[currentIndex]) {
              orbs[currentIndex].className = 'orb progress-active';
            }
            
            currentIndex = (currentIndex + 1) % orbs.length;
          }, 500);
        }
      });
    </script>
  </body>
</html>
